<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.julia.read_a_lot.GameActivity">

    <TextView
        android:id="@+id/plotView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="266dp"
        android:layout_marginTop="8dp"
        android:text="@string/bookplot"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/answer1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/answer1"
        android:layout_width="252dp"
        android:layout_height="41dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="170dp"
        android:background="@color/backgroundButton"
        android:text="@string/answer1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/answer2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/answer2"
        android:layout_width="252dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="170dp"
        android:background="@color/backgroundButton"
        android:text="@string/answer2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/answer3"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/answer3"
        android:layout_width="252dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="170dp"
        android:background="@color/backgroundButton"
        android:text="@string/answer3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:background="@color/white"
        android:visibility="invisible"
        app:srcCompat="@drawable/arrow"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="163dp"
        android:contentDescription="@string/go" />

    <TextView
        android:id="@+id/streakView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.507"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.957" />

</android.support.constraint.ConstraintLayout>
