<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.julia.read_a_lot.GenreActivity">

    <Button
        android:id="@+id/Horror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/horror"
        android:backgroundTint="@color/backgroundButton"
        android:onClick="onGenreClicked"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Mystery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGenreClicked"
        android:backgroundTint="@color/backgroundButton"
        android:text="@string/mystery"
        android:layout_below="@+id/Horror"
        android:layout_alignStart="@+id/Horror"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/Romance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/romance"
        android:backgroundTint="@color/backgroundButton"
        android:onClick="onGenreClicked"
        android:layout_below="@+id/Mystery"
        android:layout_alignStart="@+id/Mystery"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/SciFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onGenreClicked"
        android:backgroundTint="@color/backgroundButton"
        android:text="@string/scifi"
        android:layout_below="@+id/Romance"
        android:layout_alignStart="@+id/Romance"
        android:layout_marginTop="60dp" />
</RelativeLayout>
